// app global css
.note
  border-radius 4px
  margin 16px 0
  padding 16px 24px
  font-size 1em
  border-color #9e9e9e
  border-style solid
  border-width 0 5px
  letter-spacing .5px

.note--success
  background-color #f6ffed
  border-color #b7eb8f

.note--warning
  background-color #f9e09b
  border-color #f2c037

.note--danger
  background-color #ffc0c6
  border-color #c10015

.page-title
  font-size 22px

.q-notification
  transition transform .2s, opacity .2s !important

.app-message-positive
  color rgba(0, 0, 0, .65) !important
  background #f6ffed
  border 1px solid #b7eb8f

.app-message-positive i.q-icon
  margin-right 16px
  font-size 10px
  height 20px
  padding 5px
  background #52c41a
  color #fff
  border-radius 50%

.app-message-negative
  color rgba(0, 0, 0, .65) !important
  background #fff1f0
  border 1px solid #ffa39e

.app-message-negative i.q-icon
  margin-right 16px
  font-size 20px
  padding 5px
  color #f5222d

.app-message-warning
  color rgba(0, 0, 0, .65) !important
  background #fffbe6
  border 1px solid #ffe58f

.app-message-warning i.q-icon
  margin-right 16px
  font-size 20px
  padding 5px
  color #faad14

.app-message-info
  color rgba(0, 0, 0, .65) !important
  background #e6f7ff
  border 1px solid #91d5ff

.app-message-info i.q-icon
  margin-right 16px
  font-size 20px
  padding 5px
  color #1890ff

.book-list a, .book-list a:visited
  text-decoration none
  color black
